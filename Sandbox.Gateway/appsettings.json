{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*",
	"ContentSecurityPolicy": {
		"Policy": "default-src 'none'; script-src 'self'; connect-src 'self'; img-src 'self'; style-src 'self' 'unsafe-inline';base-uri 'self';"
	},
	"ReverseProxy": {
		"Routes": {
			"apiservice": {
				"ClusterId": "apiservice",
				"Match": {
					"Path": "/api/{**catch-all}"
				},
				"AuthorizationPolicy": "Default",
				"Transforms": [
					{
						"PathRemovePrefix": "/api"
					}
				]
			},
			"otelcollector": {
				"ClusterId": "otelcollector",
				"Match": {
					"Path": "/v1/traces"
				}
			},
			"angularfrontend": {
				"ClusterId": "angularfrontend",
				"Match": {
					"Path": "/{**catch-all}"
				}
			}
		},
		"Clusters": {
			"apiservice": {
				"Destinations": {
					"apiservice": {
						"Address": "http://apiservice"
					}
				}
			},
			"otelcollector": {
				"Destinations": {
					"otelcollector": {
						"Address": "http://otelcollector"
					}
				}
			},
			"angularfrontend": {
				"Destinations": {
					"angularfrontend": {
						"Address": "http://angularfrontend"
					}
				}
			}
		}
	}
}
